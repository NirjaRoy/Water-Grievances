<?xml version="1.0"?>

<RelativeLayout
    android:background="@drawable/bg2"
    android:id="@+id/uppermostLayout"
    tools:context=".mainpage"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/grev"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="#003056"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@color/md_white_1000"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="Back"
                android:textColor="#003056"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="0dp"
                android:text="WELCOME"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/msg2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Button
                android:id="@+id/out"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@color/md_white_1000"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="Next"
                android:textColor="#003056"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:background="#95212121"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="CHOOSE CATEGORY"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ChoiceLayout"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#95212121"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/OptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="top"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/flood"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#add8e6"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="FLOOD"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/quality"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#80daeb"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="WATER QUALITY"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/wastage"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#add8e6"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="WATER WASTAGE"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/agricultural"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#80daeb"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="AGRICULTURAL CROP"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/others"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="#add8e6"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#add8e6"
                    android:text="OTHERS"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />



    </LinearLayout>

</RelativeLayout>
