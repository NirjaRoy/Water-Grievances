<?xml version="1.0"?>

<RelativeLayout
    android:background="@drawable/bg2"
    android:id="@+id/uppermostLayout"
    tools:context=".login_page"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:id="@+id/footer"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/globe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/admin_login"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:contextClickable="true"
                android:textStyle="bold" />

            <View
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_width="180dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>

    <LinearLayout
                android:id="@+id/header"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="visible" >
               >

                <Button
                    android:background="#95212121"
                    android:id="@+id/signinbutton"
                    android:layout_height="40sp"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:shadowColor="#99FFFFFF"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:text="Sign In"
                    android:gravity="center"
                    android:layout_weight="0.5"/>

                <Button
                    android:id="@+id/signupbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_weight="0.5"
                    android:background="#37474F"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="Sign Up"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

    </LinearLayout>


            <LinearLayout
                android:id="@+id/login_signupLayout"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#95212121"
                android:gravity="top"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/loginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/getlogin_email"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:digits="abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                        android:gravity="center"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:textColor="#95000000"
                        android:textSize="22sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/getlogin_password"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <Button
                    android:id="@+id/loginbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:background="#FFA500"
                    android:clickable="true"
                    android:gravity="center"
                    android:shadowColor="#99FFFFFF"
                    android:text="LOGIN"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                    <Button
                        android:id="@+id/skip"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="#FFA500"
                        android:clickable="true"
                        android:gravity="center"
                        android:shadowColor="#99FFFFFF"
                        android:text="SKIP"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/signupLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:textColor="#95000000"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/getsignup_username"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/getsignup_email"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:digits="abcdefghijklmnopqrstuvwxyz0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                        android:gravity="center"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                    <EditText
                        android:id="@+id/getsignup_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="Phone Number"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/getsignup_password"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="textWebPassword"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/getsignup_password2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="Confirm Password"
                        android:inputType="textWebPassword"
                        android:textColor="#95000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/submitbutton"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#FFA500"
                        android:clickable="true"
                        android:gravity="center"
                        android:shadowColor="#99FFFFFF"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:text="SUBMIT"
                         />

                </LinearLayout>
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"/>



                <LinearLayout
                    android:id="@+id/tc"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tc_terms"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="@string/tc"
                            android:gravity="center"/>

                        <View
                            android:background="#000000"
                            android:layout_height="1dp"
                            android:layout_width="130dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tc_pp"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:text="Privacy Policy"
                            android:gravity="center"
                            android:layout_gravity="center"/>

                        <View
                            android:background="#000000"
                            android:layout_height="1dp"
                            android:layout_width="95dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_copyright"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="@string/copyright"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>

        </LinearLayout>


</RelativeLayout>
