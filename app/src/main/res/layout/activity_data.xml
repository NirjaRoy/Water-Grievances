<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/above_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="20dp">

            <LinearLayout
                android:id="@+id/base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/fillform"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:background="#003056"
                    android:gravity="center"
                    android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="130dp"
                            android:text="WELCOME"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            />

                    <Button
                        android:id="@+id/out"
                        android:layout_marginLeft="6dp"
                        android:background="@color/md_white_1000"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:shadowColor="#99FFFFFF"
                        android:text="Sign Out"
                        android:textStyle="bold"
                        android:textColor="#003056"
                        android:textSize="13sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ChoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="#95212121"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/OptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/user"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:background="#add8e6"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="View User Information"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/grievance"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:background="#80daeb"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="View Grievance Information"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/feedback"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:background="#add8e6"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#99FFFFFF"
                android:text="View Feedback and Rating"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>